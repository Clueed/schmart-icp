{
	"name": "open canvas",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
	"postCreateCommand": "npm install -g @anthropic-ai/claude-code &&  npm install -g @musistudio/claude-code-router",
	"remoteUser": "node",
	"features": {
		"ghcr.io/meaningful-ooo/devcontainer-features/fish:2": {}
	},
	"mounts": [
		{
			"source": "${localWorkspaceFolder}/.home-dir-map/.claude-code-router",
			"target": "/home/node/.claude-code-router",
			"type": "bind"
		},
		{
			"source": "${localWorkspaceFolder}/.home-dir-map/.claude",
			"target": "/home/node/.claude",
			"type": "bind"
		},
		{
			"source": "${localWorkspaceFolder}/.home-dir-map/.claude.json",
			"target": "/home/node/.claude.json",
			"type": "bind"
		}
	]
}
